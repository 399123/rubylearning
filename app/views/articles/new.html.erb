<h1>New Article</h1> 
<!-- declares form for article controller, sets url for this to articles_path -->
<%= form_for :article, url: articles_path do |f| %>
	<p>
	<!-- labels the title and text fields, and then creates and displays said input fields -->
		<%= f.label :title %><br>
		<%= f.text_field :title %>
	</p>
	<p>
		<%= f.label :text %><br>
		<%= f.text_area :text %>
	</p>

	<p>
		<%= f.submit %>
	</p>
<% end %>
<!-- adds link to return to article index -->
<%= link_to 'Back', articles_path %>

